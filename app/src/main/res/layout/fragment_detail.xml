<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".92" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/background_iv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@drawable/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title_tv"
        style="@style/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"

        app:layout_constraintBottom_toTopOf="@id/cover_iv"
        app:layout_constraintEnd_toEndOf="@id/cover_iv"
        app:layout_constraintStart_toStartOf="@id/cover_iv"
        tools:text="The Autopsy of Jane Doe" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/cover_iv"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/medium_cover"
        app:layout_constraintEnd_toEndOf="@id/background_iv"
        app:layout_constraintStart_toStartOf="@id/background_iv"
        app:layout_constraintTop_toTopOf="@id/background_iv" />


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/desc"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toBottomOf="@id/cover_iv" />


</androidx.constraintlayout.widget.ConstraintLayout>